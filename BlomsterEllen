    <script>
        // --- CHART & DATA ---
        const plants = [
            { name: 'Georginer', phases: [{ status: 'Lagring', start: 0, end: 3.5, color: '#e5e7eb' }, { status: 'Vekking', start: 3.5, end: 4.5, color: '#f43f5e' }, { status: 'Herding', start: 4.5, end: 5.5, color: '#f59e0b' }, { status: 'Blomstring', start: 6, end: 9, color: '#10b981' }] },
            { name: 'Cosmos', phases: [{ status: 'Vente', start: 0, end: 3.5, color: 'rgba(0,0,0,0)' }, { status: 'S√•ing', start: 3.5, end: 4, color: '#ec4899' }, { status: 'Vekst (Kjeller)', start: 4, end: 5, color: '#3b82f6' }, { status: 'Blomstring', start: 6.5, end: 9, color: '#10b981' }] },
            { name: 'Lathyrus', phases: [{ status: 'Vente', start: 0, end: 2.5, color: 'rgba(0,0,0,0)' }, { status: 'S√•ing', start: 2.5, end: 3, color: '#9333ea' }, { status: 'Vekst (Kjeller)', start: 3, end: 4.5, color: '#3b82f6' }, { status: 'Utplanting', start: 4.5, end: 9, color: '#10b981' }] }
        ];

        let growthChart;

        function initChart() {
            const ctx = document.getElementById('growthChart').getContext('2d');
            const labels = ['Jan', 'Feb', 'Mar', 'Apr', 'Mai', 'Jun', 'Jul', 'Aug', 'Sep', 'Okt'];
            
            const datasets = plants.flatMap(plant => {
                return plant.phases.map(phase => ({
                    label: plant.name,
                    data: [{ x: [phase.start, phase.end], y: plant.name, phaseInfo: phase.status }],
                    backgroundColor: phase.color,
                    barPercentage: 0.6,
                    plantGroup: plant.name
                }));
            });

            growthChart = new Chart(ctx, {
                type: 'bar',
                data: { labels: plants.map(p => p.name), datasets: datasets },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false }, tooltip: { callbacks: { label: (c) => c.raw.phaseInfo } } },
                    scales: { x: { min: 0, max: 9, ticks: { callback: (v) => labels[v] || '' } } }
                }
            });
        }

        function filterChart(plantName) {
            document.querySelectorAll('button').forEach(btn => {
                if(btn.textContent.includes(plantName) || (plantName === 'all' && btn.textContent === 'Vis Alt')) btn.classList.add('ring-2', 'ring-stone-400');
                else btn.classList.remove('ring-2', 'ring-stone-400');
            });
            growthChart.data.datasets.forEach(ds => ds.hidden = plantName !== 'all' && ds.plantGroup !== plantName);
            growthChart.update();
        }

        // --- AI PROMPT LOGIC ---
        const aiPlant = document.getElementById('aiPlant');
        const aiIssue = document.getElementById('aiIssue');
        const aiOutput = document.getElementById('aiOutput');

        function updatePrompt() {
            const p = aiPlant.value;
            const i = aiIssue.value;
            aiOutput.value = `Jeg dyrker ${p} i Norge. Planten har ${i}. Hva kan v√¶re √•rsaken, og hvordan fikser jeg det organisk (uten gift)? Er det relatert til vanning, lys eller temperatur?`;
        }

        aiPlant.addEventListener('change', updatePrompt);
        aiIssue.addEventListener('change', updatePrompt);

        function copyToClipboard() {
            aiOutput.select();
            aiOutput.setSelectionRange(0, 99999);
            document.execCommand('copy');
            
            const feedback = document.getElementById('copyFeedback');
            feedback.classList.remove('hidden');
            setTimeout(() => feedback.classList.add('hidden'), 2000);
        }

        // --- DATE CALCULATOR ---
        function calculateDates() {
            const frostInput = document.getElementById('frostDate').value;
            const frostDate = new Date(frostInput);
            const fmt = (d) => d.toLocaleDateString('no-NO', { day: 'numeric', month: 'long' });

            const dahliaStart = new Date(frostDate); dahliaStart.setDate(frostDate.getDate() - 42);
            const cosmosStart = new Date(frostDate); cosmosStart.setDate(frostDate.getDate() - 35);
            const peaStart = new Date(frostDate); peaStart.setDate(frostDate.getDate() - 63);

            document.getElementById('dahliaDate').textContent = `Ca. ${fmt(dahliaStart)}`;
            document.getElementById('cosmosDate').textContent = `Ca. ${fmt(cosmosStart)}`;
            document.getElementById('peaDate').textContent = `Ca. ${fmt(peaStart)}`;
            document.getElementById('resultOutput').classList.remove('hidden');
        }

        window.addEventListener('DOMContentLoaded', () => {
            initChart();
            updatePrompt();
        });

    </script>
</body>
</html>
